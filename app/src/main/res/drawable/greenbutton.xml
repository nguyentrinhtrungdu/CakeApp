<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#34a368"/> <!-- Darker green when pressed -->
            <corners android:radius="20dp"/>
            <stroke android:color="#34a368" android:width="1px"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3ec57d"/> <!-- Original green -->
            <corners android:radius="20dp"/>
            <stroke android:color="#3ec57d" android:width="1px"/>
        </shape>
    </item>
</selector>
